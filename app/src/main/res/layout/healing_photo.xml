<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_hp_iv"
            android:layout_width="192dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/list_item_tv"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_hp_iv"
            android:text="내용"
            android:background="@drawable/edit_text"
            android:textColor="@color/textColor"
            android:maxLines="3"
            android:lines="3"
            android:ellipsize="end"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/list_item_tv"
            android:layout_alignRight="@id/list_item_tv"
            android:background="@drawable/title"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 : "/>

            <TextView
                android:id="@+id/hp_list_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,234"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>